<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/tempCvalue"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="54dp"
        android:layout_x="223dp"
        android:layout_y="30dp"
        android:background="#ffffFf"
        android:ems="10"
        android:inputType="none"
        android:textColor="#000000"
        android:textCursorDrawable="@null"
        android:textSize="10sp" />

    <TextView
        android:layout_width="194dp"
        android:layout_height="20dp"
        android:layout_x="31dp"
        android:layout_y="28dp"
        android:text="@string/tempEntry" />

    <EditText
        android:id="@+id/tempResult"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="54dp"
        android:layout_x="221dp"
        android:layout_y="74dp"
        android:background="#ffffFf"
        android:ems="10"
        android:inputType="none"
        android:textColor="#000000"
        android:textCursorDrawable="@null"
        android:textSize="10sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="132dp"
        android:layout_y="72dp"
        android:text="@string/result" />

    <Button
        android:id="@+id/button1"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_x="35dp"
        android:layout_y="121dp"
        android:text="@string/calcutateCelsius" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_x="168dp"
        android:layout_y="120dp"
        android:text="@string/calculateFarenheit" />

</AbsoluteLayout>